{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist"
  },
  "include": ["package.json", "*.ts", "*.js", "**/*.ts", "**/*.js"]
}
